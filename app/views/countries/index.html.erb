<table class="table table-striped">
	<thead>
		<tr>
			<th>Country Name</th>
		</tr>
	</thead>
	<tbody>
		<% @countries.each do |country| %>
		<tr>
			<td><%= link_to country.country_name, country %></td>
			<td><%= link_to image_tag('edit.png'), edit_country_path(country) %></td>
			<td><%= link_to image_tag('trash.png'), country, confirm: 'Are you sure you want to delete this country? This cannot be undone.', method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
