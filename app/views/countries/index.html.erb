<script type="text/javascript" src="http://twitter.github.com/bootstrap/assets/js/bootstrap-dropdown.js"></script>

<ul class="nav nav-tabs">
	<li class="dropdown">
		<a class="dropdown-toggle" data-toggle="dropdown" href="#">
			Users
			<b class="caret"></b>
		</a>

		<ul class="dropdown-menu">
			<li><%= link_to "MUN School Director", lists_path %></li>
			<li><%= link_to "System Admin", lists_path %></li>
			<li><%= link_to "Conference Manager", lists_path %></li>
		</ul>

		<li><%= link_to "Conferences", conferences_path %></li>
		<li><%= link_to "Committees", committees_path %></li>
		<li><%= link_to "Delegates", delegates_path %></li>
		<li><%= link_to "Schools", schools_path %></li>

		<li class="dropdown">
			<a class="dropdown-toggle"	data-toggle="dropdown" href="#">
				Countries
				<b class="caret"></b>
			</a>

			<ul class="dropdown-menu">
				<li><%= link_to "Countries", countries_path %></li>
				<li><%= link_to "Country custom lists", lists_path %></li>
			</ul>
		</li>
	</li>
</ul>


<br/></br/></br/>

<div class="well form-inline">
	<h2>Countries</h2>
	<br/>
</div>

<table class="table table-striped">
	<thead>
		<tr>
			<th>Country Name</th>
		</tr>
	</thead>
	<tbody>
		<% @countries.each do |country| %>
		<tr>
			<td><%= link_to country.country_name, country %></td>
			<td><%= link_to image_tag('edit.png'), edit_country_path(country) %></td>
			<td><%= link_to image_tag('trash.png'), country, confirm: 'Are you sure you want to delete this country? This cannot be undone.', method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>

<br/>
<hr>

