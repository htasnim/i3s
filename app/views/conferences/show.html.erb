    <div class="row-fluid">
       
	    <div class="span12 well">

 <h1><%= @conference.conference_title %></h1>

	 <h3 style="color: #39b1c6;"><%= @conference.start_date.strftime('%B %e, %Y') %> - <%= @conference.end_date.strftime('%B %e, %Y') %></h3>
  <h4> Hosted by <%= @conference.host %> </h4>
</div>
<hr>

