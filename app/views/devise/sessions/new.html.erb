<section id="forms">
	<div class="page-header">
		<h2>Sign in</h2>
	</div>

	<div class="row">
		<div class="span7 offset2">
			<div class="form-horizontal well">

			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

			<legend>Sign in</legend>

			<div class="control-group">
				 <!-- f.label :email, :class => "control-label", :for =>"inputIcon" -->
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on"><i class="icon-envelope-alt"></i></span>
						<%= f.email_field :email, :placeholder => "Email", :class => "span3", :id => "inputIcon" %>
					</div>
					
				</div>
			</div>

			<div class="control-group">
				<!-- f.label :password, :class => "control-label", :for =>"inputIcon" -->
				<div class="controls">
					<div class="input-prepend">
						<span class="add-on"><i class="icon-lock"></i></span>
						<%= f.password_field :password, :placeholder => "Password", :class => "span3", :id => "inputIcon" %>
					</div>
					
				</div>
			</div>
	

			<div class="control-group">
				<div class="controls">
					<label class="checkbox">
					<% if devise_mapping.rememberable? -%>
					<div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
					<% end -%>
					</label>
				</div>
			</div>

			<div class="control-group">
				<div class="controls">
					<%= f.submit "Sign in", :class => "btn btn-primary"%>
				</div>
			</div>

  			<% end %>
  			<%= render "devise/shared/links" %>
	
			</div>
		</div>
	</div>
</section>