<section id="forms">
  <div class="page-header">
    <h2>Edit Account Settings</h2>
  </div>

    <div class="row">
    <div class="span7 offset2">
      <div class="form-horizontal well">

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <legend>Account Details</legend>

      <div class="control-group">
        <%= f.label :first_name, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :last_name, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :last_name %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :gender, :class => "control-label" %>
        <div class="controls">
          <%= f.select :gender, ['Male', 'Female'] %>
        </div>
      </div> 

      <div class="control-group">
        <%= f.label :nationality, :class => "control-label" %>
        <div class="controls">
          <%= f.text_field :nationality %>
        </div>
      </div>      

      <div class="control-group">
        <div class="controls">
          <%= f.submit "Update Account", :class => "btn btn-primary"%>
          <%= link_to "Cancel", root_path, :class => "btn" %>
        </div>
      </div>

      <% end %>
      </div>
    </div>
  </div>

  <div class="row">
    <div class="span7 offset2">
      <div class="form-horizontal well">

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <legend>Change Password</legend>

      <div class="control-group">
        <%= f.label :email, :class => "control-label" %>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :current_password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :current_password %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :new_password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password, :autocomplete => "off" %>
        </div>
      </div>

      <div class="control-group">
        <%= f.label :confirm_new_password, :class => "control-label" %>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit "Change Password", :class => "btn btn-primary"%>
          <%= link_to "Cancel", root_path, :class => "btn" %>
        </div>
      </div>

      <% end %>
      </div>
    </div>
  </div>
</section>