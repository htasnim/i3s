<section id="forms">
  <div class="page-header">
    <h2>Edit Account Settings</h2>
  </div>

  <div class="row">
    <div class="span7 offset2">
      <div class="form-horizontal well">

      <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <legend>Change Password</legend>

      <div class="control-group">
        <label><%= f.label :email, :class => "control-label" %></label>
        <div class="controls">
          <%= f.email_field :email %>
        </div>
      </div>

      <div class="control-group">
        <label><%= f.label :current_password, :class => "control-label" %></label>
        <div class="controls">
          <%= f.password_field :current_password %>
        </div>
      </div>

      <div class="control-group">
        <label><%= f.label :new_password, :class => "control-label" %></label>
        <div class="controls">
          <%= f.password_field :password, :autocomplete => "off" %>
        </div>
      </div>

      <div class="control-group">
        <label><%= f.label :confirm_new_password, :class => "control-label" %></label>
        <div class="controls">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>

      <div class="control-group">
        <div class="controls">
          <%= f.submit "Change Password", :class => "btn btn-primary"%>
          <%= link_to "Cancel", :back, :class => "btn" %>
        </div>
      </div>

      <% end %>
      </div>
    </div>
  </div>
</section>