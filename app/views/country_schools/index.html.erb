<h1>Listing country_schools</h1>

<table>
  <tr>
    <th>Country</th>
    <th>School</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @country_schools.each do |country_school| %>
  <tr>
    <td><%= country_school.country.country_name %></td>
    <td><%= country_school.school.school_name %></td>
    <td><%= link_to 'Show', country_school %></td>
    <td><%= link_to 'Edit', edit_country_school_path(country_school) %></td>
    <td><%= link_to 'Destroy', country_school, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

