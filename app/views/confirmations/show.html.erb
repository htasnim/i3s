<section id="forms">
	<div class="page-header">
		<h2>Account Confirmation</h2>
	</div>

	<div class="row">
		<div class="span7 offset2">
			<div class="form-horizontal well">

			<%= form_for(resource, :as => resource_name, :url => confirm_path) do |f| %>
			<%= devise_error_messages! %>

			<legend>You're almost done!<br/><p style="font-size: 16px; line-height: 1.8em; color: #888888;">Now enter your details and create a password to securely access your account.</p></legend>

			<div class="control-group">
				<%= f.label :first_name, :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :first_name %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :last_name, :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :last_name %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :gender, :class => "control-label" %>
				<div class="controls">
					<%= f.select :gender, ['Male', 'Female'] %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :nationality, :class => "control-label" %>
				<div class="controls">
					<%= f.text_field :nationality %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :password, :class => "control-label" %>
				<div class="controls">
					<%= f.password_field :password %>
				</div>
			</div>

			<div class="control-group">
				<%= f.label :password_confirmation, :class => "control-label" %>
				<div class="controls">
					<%= f.password_field :password_confirmation %>
				</div>
			</div>

			<%= f.hidden_field :confirmation_token %>

			<div class="control-group">
				<div class="controls">
					<%= f.submit "Confirm Account", :class => "btn btn-primary"%>
					<%= link_to "Cancel", root_path, :class => "btn" %>
				</div>
			</div>

  			<% end %>
	
			</div>
		</div>
	</div>
</section>