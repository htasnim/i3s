<div class="well form-inline">
  <h2>Users</h2>
  <button class="btn pull-left form-inline"><%= link_to 'New User', new_user_path %></button>
  <br/>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Email</th>
      <th>Full Name</th>
      <th>Role</th>
    </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.fullname %></td>
      <td><%= user.roles[0].name %></td>
      <td><%= link_to 'Show', user %></td>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
      <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<br />

