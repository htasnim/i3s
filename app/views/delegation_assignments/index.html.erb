<h2>Delegation Assignments</h2>
  
  <br/>

<div class="well form-inline">

<table class="table table-striped">
  <thead>
    <tr>
      <th>Country</th>
      <th>School</th>
    </tr>
  </thead>

  <tbody>
    <% @delegation_assignments.each do |delegation_assignment| %>
    <tr>
      <td><%= delegation_assignment.country.country_name %></td>
      <td>
        <% if delegation_assignment.school_id == nil %>
          <%= link_to 'Assign School', edit_delegation_assignment_path(delegation_assignment) %>
        <% else %>
          <%= delegation_assignment.school.school_name %>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
