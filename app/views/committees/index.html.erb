<h1>Listing committees</h1>

<table>
  <tr>
    <th>Committee name</th>
    <th>Num delegates</th>
    <th>Conference</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @committees.each do |committee| %>
  <tr>
    <td><%= committee.committee_name %></td>
    <td><%= committee.num_delegates %></td>
 <td><%= committee.conference.conference_title %></td>
    <td><%= link_to 'Show', committee %></td>
    <td><%= link_to 'Edit', edit_committee_path(committee) %></td>
    <td><%= link_to 'Destroy', committee, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br/><br/><br/><br/>
<%= form_for @search, :url => committees_path, :html => {:method => :get} do |f| %>
  <%= f.label :Search_by_committee_name %>
  <%= f.text_field :committee_name_contains %><br />

  <%= f.submit "Search for committee name"%>
<br/>

<%= link_to 'New Committee', new_committee_path %>
<% end %>