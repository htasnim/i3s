			<th>Conference</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @committees.each do |committee| %>
		<tr>
			<td><%= link_to committee.committee_name, committee %></td>
			<td><%= committee.num_delegates %></td>
			<td><%= committee.conference.conference_title %></td>
