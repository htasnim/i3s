<h1>Listing schools</h1>

<table>
  <tr>
    <th>School name</th>
    <th>School address</th>
    <th>Email address</th>
    <th>Max students</th>
    <th>Conference</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @schools.each do |school| %>
  <tr>
    <td><%= school.school_name %></td>
    <td><%= school.school_address %></td>
    <td><%= school.email %></td>
    <td><%= school.max_students %></td>
    <td><%= school.conference.conference_title %></td>
    <td><%= school.user_id %></td>
    <td><%= link_to 'Show', school %></td>
    <td><%= link_to 'Edit', edit_school_path(school) %></td>
    <td><%= link_to 'Destroy', school, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br/><br/><br/><br/>
<%= form_for @search, :url => schools_path, :html => {:method => :get} do |f| %>
  <%= f.label :Search_by_school_name %>
  <%= f.text_field :school_name_contains %><br />

  <%= f.submit "Search for schools"%>

<br/><br/>
<%= link_to 'New School', new_school_path %>
<% end %>