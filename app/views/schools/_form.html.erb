<%= form_for(@school) do |f| %>
  <% if @school.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@school.errors.count, "error") %> prohibited this school from being saved:</h2>

      <ul>
      <% @school.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :school_name %>
    <%= f.text_field :school_name %>
  </div>
  
  <div class="field">
    <%= f.label :school_address %>
    <%= f.text_field :school_address %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  <%= f.hidden_field :email, :value => current_user.email %>
  <div class="field">
    <%= f.label :max_students %>
    <%= f.number_field :max_students %>
  </div>

  <%= f.collection_select :conference_id, Conference.where("is_active == ?", true), :id, :conference_title %>

  <div class="actions">
	<button type="submit" class="btn">Create school</button>
  </div>
<% end %>