<h1>Listing delegates</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Gender</th>
    <th>Date of birth</th>
    <th>Nationality</th>
    <th>School</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @delegates.each do |delegate| %>
  <tr>
    <td><%= delegate.first_name %></td>
    <td><%= delegate.last_name %></td>
    <td><%= delegate.gender %></td>
    <td><%= delegate.date_of_birth %></td>
    <td><%= delegate.nationality %></td>
    <td><%= delegate.school_id %></td>
    <td><%= link_to 'Show', delegate %></td>
    <td><%= link_to 'Edit', edit_delegate_path(delegate) %></td>
    <td><%= link_to 'Destroy', delegate, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br/><br/><br/><br/>
<%= form_for @search, :url => delegates_path, :html => {:method => :get} do |f| %>
  <%= f.label :Search_by_delegate_name %>
  <%= f.text_field :first_name_contains %><br />

  <%= f.submit "Search for delegates"%>

<br/><br/>


<%= link_to 'New Delegate', new_delegate_path %>
<% end %>
