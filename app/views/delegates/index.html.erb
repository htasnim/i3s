<div class="pull-right">
	<%= form_for @search, :url => delegates_path, :html => {:method => :get} do |f| %>
		<%= f.text_field :first_name_contains, :class => "navbar-search form-inline input-medium search-query", :placeholder => "Search" %>
	<% end %>
</div>
	<h2>Delegates</h2>
	
	<br/>

<div class="well form-inline">


<table class="table table-striped">
	<thead>
		<tr>
			<th>Full name</th>
			<th>Gender</th>
			<th>Date of birth</th>
			<th>Nationality</th>
			<th>School</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% @delegates.each do |delegate| %>
		<tr>
			<td><%= link_to delegate.fullname, delegate %></td>
			<td><%= delegate.gender %></td>
			<td><%= delegate.date_of_birth %></td>
			<td><%= delegate.nationality %></td>
			<td><%= delegate.school_id %></td>
			<td><%= link_to image_tag('edit.png'), edit_delegate_path(delegate) %></td>
			<td><%= link_to image_tag('trash.png'), delegate, confirm: 'Are you sure?', method: :delete %></td>
		</tr>
		<% end %>
	</tbody>
</table>
</div>

<br/><hr>
<p ALIGN="RIGHT"> <i class="icon-chevron-up"></i> <a href="#top">Back to Top</a></p>

