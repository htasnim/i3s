
<section id="forms ">


	<div class="row">
		<div class="span6 offset2 pull-left">
			<div class="form-horizontal well">
				



<%= form_for([@school, @school.delegates.build]) do |f| %>

  <div class="field">
    <%= f.label :first_name %><br />
    <%= f.text_field :first_name %>
  </div>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

	  <div class="control-group">
      <%= f.label :gender, :class => "control-label" %>
      <div class="controls">
        <%= f.select :gender, ['Male', 'Female'] %>
      </div>
    </div>



<div class="control-group">
    <%= f.label :date_of_birth , :class => "control-label" %>
	<div class="controls">
    <%= f.text_field :date_of_birth, :placeholder => "dd/mm/yyyy", :databehaviour => "datepicker"%>
  </div>
</div>


  <div class="field">
    <%= f.label :nationality %>
    <%= f.text_field :nationality %>
  </div>
  <div class="field">
    <%= f.label :country %>
    <%= f.collection_select :country_id, Country.btaschool(@school), :id, :country_name %>
  </div>
  <div class="field">
    <%= f.label :committee %>
    <%= f.collection_select :committee_id, Committee.btalist(List.btacountry(Country.btaschool(@school))), :id, :committee_name %>
  </div>
  <div class="actions">
	<button type="submit" class="btn">Create delegate</button>
  </div>

<% end %>


		</div>
	</div>
</div>
</section>


