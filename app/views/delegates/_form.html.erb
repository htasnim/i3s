<script type="text/javascript" src="http://twitter.github.com/bootstrap/assets/js/bootstrap-dropdown.js"></script>
<section id="forms">
    <div class="span12">
      <%= render 'layouts/messages' %>
      <div class="form-horizontal well">
				
<%= form_for([@school, @school.delegates.build]) do |f| %>

  <div class="control-group">
    <%= f.label :first_name, :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :first_name %>
  </div>
</div>

  <div class="control-group">
    <%= f.label :last_name, :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :last_name %>
  </div>
  </div>

	  <div class="control-group">
      <%= f.label :gender, :class => "control-label" %>
      <div class="controls">
        <%= f.select :gender, ['Male', 'Female'] %>
      </div>
    </div>



<div class="control-group">
    <%= f.label :date_of_birth, :class => "control-label" %>
	<div class="controls">
    <%= f.text_field :date_of_birth, :class => "datepicker", :placeholder => "dd/mm/yyyy", :databehaviour => "datepicker"%>
  </div>
</div>


  <div class="control-group">
    <%= f.label :nationality, :class => "control-label" %>
    <div class="controls">
    <%= f.text_field :nationality %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :country, :class => "control-label" %>
    <div class="controls">
    <%= f.collection_select :country_id, Country.btaschool(@school), :id, :country_name %>
  </div>
  </div>
  <div class="control-group">
    <%= f.label :committee, :class => "control-label" %>
    <div class="controls">
    <%= f.collection_select :committee_id, Committee.btalist(List.btacountry(Country.btaschool(@school))), :id, :committee_name %>
  </div>
  </div>
  <div class="control-group">
    <div class="controls">
	<%= f.submit "Create Delegate", :class => "btn btn-primary"%>
  </div></div>

<% end %>


    </div>
  </div>

</section>